<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaiyuan_wang.mobileconnexus" >

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginPage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewAllStreams"
            android:label="@string/title_activity_view_all_streams" >
        </activity>
        <activity
            android:name=".ViewSingleStream"
            android:label="@string/title_activity_view_single_stream" >
        </activity>
        <activity
            android:name=".SearchPage"
            android:label="@string/title_activity_search_page" >
        </activity>
        <activity
            android:name=".NearbyPhotos"
            android:label="@string/title_activity_near_by_photos" >
        </activity>
        <activity
            android:name=".SubscribedStreams"
            android:label="@string/title_activity_subscribed_streams" >
        </activity>
        <activity
            android:name=".Upload"
            android:label="@string/title_activity_upload" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".CameraActivity"
            android:label="@string/title_activity_camera"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
